<%- layout('layouts/boilerplate') %>

<% block('title').append(title) %>


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center fade-in">
            <div class="error-container p-5 bg-white rounded shadow-sm">
                <i class="fas fa-exclamation-circle text-danger mb-4" style="font-size: 4rem;"></i>
                <h1 class="display-4 mb-4">Status Code : <%= title %></h1>
                <p class="lead text-muted mb-4"><%= message %></p>
                <a href="/listings" class="btn btn-primary btn-lg">
                    <i class="fas fa-home me-2"></i>Back to Listings
                </a>
            </div>
        </div>
    </div>
</div>