<%- layout('layouts/boilerplate') %>



<div class="container py-5">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 fade-in">
        <% for(let list of allListing) { %>
            <div class="col">
                <div class="card listing-card h-100 shadow-sm">
                    <div class="position-relative">
                        <img src="<%= list.image.url %>" class="card-img-top" alt="<%= list.title %>">
                        <div class="price-tag">
                            <i class="fas fa-tag"></i> $<%= list.price %>
                        </div>
                        <div class="location-badge">
                            <i class="fas fa-map-marker-alt"></i> <%= list.location %>, <%= list.country %>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%= list.title %></h5>
                        <p class="card-text text-muted"><%= list.description %></p>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/listings/<%= list._id %>" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-info-circle"></i> View Details
                            </a>
                            <% if (currentUser && list.owner && currentUser._id.equals(list.owner._id)) { %>
                                <div class="btn-group">
                                    <a href="/listings/<%= list._id %>/edit" class="btn btn-outline-warning btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="/listings/<%= list._id %>?_method=DELETE" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

